{
  "name": "umoja-backend",
  "version": "1.0.0",
  "type": "commonjs",
  "main": "index.js",
  "scripts": {
    "test": "cross-env NODE_ENV=test jest --config=jest.config.cjs --forceExit --detectOpenHandles",
    "test:watch": "jest --watch --config=jest.config.cjs",
    "test:coverage": "jest --coverage --config=jest.config.cjs",
    "dev": "cross-env NODE_ENV=test nodemon --exec ts-node --transpile-only src/app.ts",
    "dev:watch": "nodemon --exec ts-node --transpile-only src/app.ts",
    "build": "tsc",
    "start": "node dist/app.js",
    "lint": "echo \"Linting not configured\" && exit 0",
    "lint:fix": "echo \"Linting not configured\" && exit 0",
    "type-check": "tsc --noEmit",
    "seed:prod": "node dist/configs/enhanced-seed-questions.js || node dist/prisma/seed.js",
    "seed:local": "ts-node --transpile-only configs/enhanced-seed-questions.ts",
    "seed:production-only": "node dist/configs/seed-production.js",
    "db:generate": "cross-env NODE_ENV=test npx prisma generate",
    "db:push": "cross-env NODE_ENV=test npx prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:migrate:deploy": "prisma migrate deploy",
    "db:studio": "prisma studio",
    "db:seed": "ts-node --transpile-only prisma/seed.ts",
    "db:seed-questions": "ts-node --transpile-only prisma/seed-questions.ts",
    "clean": "rm -rf dist"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "@prisma/client": "^5.16.2",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "express-rate-limit": "^8.1.0",
    "firebase-admin": "^13.5.0",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "mysql2": "^3.11.0",
    "swagger-ui-express": "^5.0.1"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/fs-extra": "^11.0.4",
    "@types/helmet": "^4.0.0",
    "@types/jest": "^29.5.12",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^20.14.11",
    "@types/supertest": "^6.0.2",
    "cross-env": "^10.1.0",
    "jest": "^28.1.3",
    "jest-environment-node-single-context": "^29.4.0",
    "nodemon": "^3.1.4",
    "prisma": "^5.16.2",
    "supertest": "^6.3.4",
    "ts-jest": "^28.0.8",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.9.3",
    "wrap-ansi": "^7.0.0"
  }
}
