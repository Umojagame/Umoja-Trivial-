PORT=5000
NODE_ENV=development
DATABASE_URL=mysql://user:password@localhost:3306/umoja
JWT_SECRET=your-strong-secret-here-32-chars-min
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=30d
# Comma-separated list of allowed frontend origins
CORS_ORIGINS=http://localhost:3000
PORT=5001
# Optional: Client Firebase config (used by helper page to get idToken)
FIREBASE_API_KEY=<your_firebase_api_key>
FIREBASE_AUTH_DOMAIN=<your_firebase_auth_domain>
FIREBASE_PROJECT_ID=<your_firebase_project_id>
FIREBASE_STORAGE_BUCKET=<your_firebase_storage_bucket>
FIREBASE_MESSAGING_SENDER_ID=<your_firebase_messaging_sender_id>
FIREBASE_APP_ID=<your_firebase_app_id>
# Server-side Firebase Admin (REQUIRED for backend; copy from firebase-service-account.json)
FIREBASE_PROJECT_ID=<your_firebase_project_id>
FIREBASE_PRIVATE_KEY_ID=copy_from_service_account.private_key_id
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nPASTE_WITH_ESCAPED_NEWLINES\n-----END PRIVATE KEY-----\n"
FIREBASE_CLIENT_EMAIL=copy_from_service_account.client_email
FIREBASE_CLIENT_ID=copy_from_service_account.client_id
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100